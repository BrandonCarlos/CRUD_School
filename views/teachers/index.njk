{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        {# No ARQUIVO "teachers.js" criamos a FUNÇÃO "INDEX" que está mandando para cá todos os dados
        dos professores #}
        <table width="100%">
            <thead>
                <tr>
                    <!-- LINHAS -->
                    <th>Nome completo</th>
                    <!-- COLUNAS -->
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{teacher.avatar_url}});"></span>
                        {{teacher.name}}
                    </td>
                    <td>
                        {# Transformando o campo "services" em um ARRAY de STRING'S #}
                        {% for service in teacher.services.split(",") %}
                            <span class="services">{{service}}</span>
                        {% endfor %}

                    </td>
                    <td><a href="/teachers/{{teacher.id}}" class="button">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}